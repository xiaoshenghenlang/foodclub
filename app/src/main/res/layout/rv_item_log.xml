<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_15"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_head"
                android:scaleType="centerCrop"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="主播名" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2小时前" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:textSize="@dimen/sp_12"
            android:text="nbsajdnbsakjdnsajkdnkjsandkjsandkjasndjksandjksandjknsakjdnsajkdn"
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:maxLines="5" />
        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="@dimen/dp_10"
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginRight="@dimen/dp_2"
            android:layout_marginLeft="@dimen/dp_2"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/shape_corners_five_gray_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_margin="@dimen/dp_10"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/main_color"
                    android:textSize="@dimen/sp_10"
                    android:text="@string/app_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="@color/gray"
                    android:textSize="@dimen/sp_10"
                    android:text=":"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="@color/gray_a8"
                    android:textSize="@dimen/sp_10"
                    android:text="@string/app_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@color/gray_f9"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
        android:padding="@dimen/dp_5"
            android:gravity="center"
            android:orientation="horizontal"
            android:clickable="true"
            android:background="@drawable/selector_item_bg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:layout_marginRight="@dimen/dp_2"
                android:src="@drawable/gallery_forward"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15" />
            <TextView
                android:id="@+id/tv_forward"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/gray_a8"
                android:text="123"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:padding="@dimen/dp_5"
            android:gravity="center"
            android:orientation="horizontal"
            android:clickable="true"
            android:background="@drawable/selector_item_bg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:layout_marginRight="@dimen/dp_2"
                android:src="@drawable/gallery_comment"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15" />
            <TextView
                android:id="@+id/tv_comment"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/gray_a8"
                android:text="123"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:padding="@dimen/dp_5"
            android:gravity="center"
            android:orientation="horizontal"
            android:clickable="true"
            android:background="@drawable/selector_item_bg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:layout_marginRight="@dimen/dp_2"
                android:src="@drawable/gallery_like"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15" />
            <TextView
                android:id="@+id/tv_like"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/gray_a8"
                android:text="123"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>
    <View
        android:background="@color/gray_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"/>
</LinearLayout>
